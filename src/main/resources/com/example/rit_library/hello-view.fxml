<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rit_library.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="ADD A BOOK">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TextField fx:id="fieldID" promptText="Book ID" />
      <TextField fx:id="fieldPublisher" layoutX="30.0" layoutY="98.0" promptText="Publisher" />
      <TextField fx:id="fieldCourse" layoutX="30.0" layoutY="300.0" promptText="Course" />
      <TextField fx:id="fieldTitle" layoutX="30.0" layoutY="75.0" promptText="Book Title" />
      <TextField fx:id="fieldDescription" layoutX="30.0" layoutY="165.0" promptText="Description" />
      <TextField fx:id="fieldISBN" layoutX="30.0" layoutY="75.0" promptText="Book ISBN" />
      <TextField fx:id="fieldYear" layoutX="30.0" layoutY="120.0" promptText="Year of Publishing" />
      <TextField fx:id="fieldGenre" layoutX="30.0" layoutY="300.0" promptText="Genre" />
      <TextField fx:id="fieldFormat" layoutX="30.0" layoutY="323.0" promptText="Format" />
      <TextField fx:id="fieldState" layoutX="30.0" layoutY="345.0" promptText="State" />
      <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#addBook" text="Save">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="CancelButton" mnemonicParsing="false" onAction="#cancelAddBook" text="Cancel">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
